@model CRVS.Core.Models.Religion
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form method="post" asp-action="Create" class="btn btn-success" asp-controller="Religion">

    <table class="table table-bordered table-striped">
        <tr>
            <td>
                <label asp-for="ReligionName"></label>
            </td>
            <td>
                <input asp-for="ReligionName" class="form-control" placeholder="Enter Name" />
                <span class="text-danger" asp-validation-for="ReligionName"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-success" value="Create" />
                <a asp-action="Index" asp-controller="Religion" class="btn btn-warning">
                    Cancel
                </a>
            </td>
        </tr>
    </table>

</form>

