@model CRVS.Core.Models.Nahia
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" asp-action="Edit" asp-controller="Nahia">
    <input type="hidden" asp-for="NahiaId" />
    <table class="table table-bordered table-striped">
        <tr>
            <td>
                <label asp-for="NahiaName"></label>
            </td>
            <td>
                <input asp-for="NahiaName" class="form-control" placeholder="Enter Name" />
                <span class="text-danger" asp-validation-for="NahiaName"></span>

            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-success" value="update" />
                <a asp-action="index" asp-controller="Nahia" class="btn btn-warning">
                    cancel
                </a>
            </td>
        </tr>

    </table>
</form>

