@model IEnumerable<CRVS.Core.Models.Nahia>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>

   <a asp-action="Recovary2">Deleted</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NahiaName)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NahiaName)
                </td>


                <th>

                    @if (item.IsDeleted == true)
                    {
                        <a asp-action="RecovaryDeleted" asp-route-id="@item.NahiaId" class="text-success">Restore</a>
                    }

                    else
                    {
                        <a asp-action="Recycle" asp-route-id="@item.NahiaId" class="text-danger">Not Deleted</a>


                    }


                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NahiaId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.NahiaId">Details</a>
                    <a asp-action="SoftDelete2" class="btn btn-danger " asp-route-id="@item.NahiaId">Soft Delete 2</a>
                    <a asp-action="History" asp-route-id="@item.NahiaId">History</a>




                </td>

            </tr>
        }

    </tbody>
</table>


