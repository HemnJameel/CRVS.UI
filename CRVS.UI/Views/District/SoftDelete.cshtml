@model IEnumerable<CRVS.Core.Models.District>
@{
    ViewData["Title"] = "SoftDelete";
}

<h1>SoftDelete</h1>

<p>
    <a asp-action="Create">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistrictName)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DistrictName)
                </td>


                <th>

                    @if (item.IsDeleted == true)
                    {
                        <a asp-action="Delete" asp-route-id="@item.DistrictId" class="text-success">Delete</a>
                    }

                    else
                    {
                        <a asp-action="Recovary" asp-route-id="@item.DistrictId" class="text-danger">Not Delete</a>


                    }


                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DistrictId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DistrictId">Details</a>
                    @*<a asp-action="Delete" asp-route-id="@item.DistrictId">Delete</a>*@
                    <a asp-action="History" asp-route-id="@item.DistrictId">History</a>
                    <a asp-action="SoftDelete" asp-route-id="@item.DistrictId">SoftDelete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


