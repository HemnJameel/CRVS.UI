@model IEnumerable<CRVS.Core.Models.Governorite>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="AllActivate">Activate</a>
    <a asp-action="AllNotActivate">NotActivate</a>
    <a asp-action="Recovary">Deleted</a>
    <a asp-action="Recovary2">Deleted2</a>
    <a asp-action="Recovary3">Deleted3</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GovernoriteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GovernoriteName)
                </td>
                <th>

                    @if (item.IsActive == true)
                    {
                        <a asp-action="DeActivate" asp-route-id="@item.GovernoriteId" class="text-success">Active</a>
                    }

                    else
                    {
                        <a asp-action="Activate" asp-route-id="@item.GovernoriteId" class="text-danger">Not Active</a>


                    }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GovernoriteId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.GovernoriteId">Details</a>
                    @*<a asp-action="Delete" asp-route-id="@item.GovernoriteId">Delete</a>*@
                    <a asp-action="History" class="btn btn-primary" asp-route-id="@item.GovernoriteId">History</a>
                    <a asp-action="SoftDelete" class="btn btn-danger" asp-route-id="@item.GovernoriteId">Soft Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


